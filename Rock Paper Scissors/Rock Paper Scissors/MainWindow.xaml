<Window x:Class="RockPaperScissors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rock Paper Scissors" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Rock Paper Scissors (C# Edition) v1.0" Margin="0,0,0,10"/>
            <Button Content="Rock" Click="RockButton_Click" Margin="0,0,0,10"/>
            <Button Content="Paper" Click="PaperButton_Click" Margin="0,0,0,10"/>
            <Button Content="Scissors" Click="ScissorsButton_Click" Margin="0,0,0,10"/>
            <TextBlock x:Name="ResultText" FontWeight="Bold" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>